{
    "logbook": {
        "type": "object",
        "properties": {
            "timestamp": {
                "type": "string",
                "format": "date-time"
            },
            "event": {
                "type": "string"
            },
            "details": {
                "type": "string"
            },
            "involved_modules": {
                "type": "array"
            },
            "operator": {
                "type": "string"
            }
        },
        "required": [
            "timestamp",
            "operator"
        ]
    },
    
    "module": {
        "type": "object",
        "properties": {
            "moduleID": {
                "type": "string"
            },
            "position": {
                "type": "string"
            },
            "notes": {
                "type": "object"
            },
            "ref_to_global_logbook": {
                "type": "array"
            },
            "status": {
                "type": "string"
            },
            "overall_grade": {
                "type": "string"
            },
            "tests": {
                "type": "array"
            }
        },
        "required": [
            "moduleID",
            "position",
            "status"
        ]
    },
    "CurrentCablingMap": {
        "type": "object",
        "properties": {
            "ID": {
                "type": "string"
            },
            "detSide": {
                "type": "array",
                "items": {
                    "type": "object"
                }
            },
            "crateSide": {
                "type": "string"
            },
            "Type": {
                "type": "string"
            }
        },
        "required": [
            "ID",
            "detSide",
            "crateSide",
            "Type"
        ]
    },

    "tests" : {
        "type": "object",
        "properties":   {
            "testID": {
                "type": "string"
            },
            "modules_list": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "testType": {
                "type": "string"
            },
            "testDate": {
                "type": "string"
            },
            "testOperator": {
                "type": "string"
            },
            "testStatus": {
                "type": "string"
            },
            "testResults": {
                "type": "object"
            }
        },
        "required": [
            "testID",
            "testType",
            "modules_list",
            "testDate",
            "testStatus",
            "testResults"
        ]
        },

        "ConnectionSnapshot": {
            "type": "object",
            "properties": {
                "First": {
                    "type": "string"
                },
                "Last": {
                    "type": "string"
                },
                "Chain": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "First",
                "Last",
                "Chain"
            ]
        }
    }

    