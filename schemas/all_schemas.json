{
    "logbook": {
        "type": "object",
        "properties": {
            "sessionID": {
                "type": "string"
            }, 		    
	    "station":{
	        "type": "string"	
	    },
            "timestamp": {
                "type": "string",
                "format": "date-time"
            },
            "event": {
                "type": "string"
            },
            "details": {
                "type": "string"
            },
            "involved_modules": {
                "type": "array"
            },
            "operator": {
                "type": "string"
            }
        },
        "required": [
            "timestamp",
            "operator",
	        "sessionid",
	        "station",
	        "event"
        ]
    },
    "module": {
        "type": "object",
        "properties": {
            "moduleID": {
                "type": "string"
            },
            "hardwareID": {
                "type": "string"
            },
            "position": {
                "type": "string"
            },
            "notes": {
                "type": "object"
            },
            "ref_to_global_logbook": {
                "type": "array"
            },
            "status": {
                "type": "string"
            },
            "overall_grade": {
                "type": "string"
            },
            "moduleTests": {
                "type": "array"
            },
            "connectedTo": {
                "bsonType": "objectId"
            }
        },
        "required": [
            "moduleID",
            "position",
            "status"
        ]
    },
    "cables": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "Human-readable name for the cable"
            },
            "type": {
                "type": "string",
                "description": "Type of cable, e.g., '12-to-1'"
            },
            "detSide": {
                "type": "array",
                "description": "List of connections on the detector side",
                "items": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer"
                        },
                        "connectedTo": {
                            "bsonType": "objectId",
                            "description": "Reference to the connected module or cable"
                        },
                        "type": {
                            "type": "string",
                            "description": "Type of entity this port is connected to, e.g., 'module', 'cable'"
                        }
                    },
                    "required": [
                        "port",
                        "connectedTo",
                        "type"
                    ]
                }
            },
            "crateSide": {
                "type": "array",
                "description": "List of connections on the crate side",
                "items": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer"
                        },
                        "connectedTo": {
                            "bsonType": "objectId",
                            "description": "Reference to the connected crate or cable"
                        },
                        "type": {
                            "type": "string",
                            "description": "Type of entity this port is connected to, e.g., 'crate', 'cable'"
                        }
                    },
                    "required": [
                        "port",
                        "connectedTo",
                        "type"
                    ]
                }
            }
        },
        "required": [
            "type",
            "detSide",
            "crateSide"
        ]
    },
    "cable_templates": {
        "type": "object",
        "properties": {
            "type": {
                "type": "string",
                "description": "Type of cable, e.g., '12-to-1'"
            },
            "internalRouting": {
                "type": "object",
                "additionalProperties": {
                    "type": ["integer", "array"]
                },
                "description": "Mapping of input ports to output ports"
            }
        },
        "required": [
            "type",
            "internalRouting"
        ]
    },
    "CurrentCablingMap": {
        "type": "object",
        "properties": {
            "ID": {
                "type": "string"
            },
            "detSide": {
                "type": "array",
                "items": {
                    "type": "object"
                }
            },
            "crateSide": {
                "type": "array"
            },
            "Type": {
                "type": "string"
            }
        },
        "required": [
            "ID",
            "detSide",
            "crateSide",
            "Type"
        ]
    },
    "testpayload":{
        "type": "object",
        "properties": {
            "sessionID": {
                "type": "string"
            },
            "details":{
                "type": "string"
            },
            "localFileList": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "remoteFileList": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "sessionID",
            "remoteFileList"
        ]
    },
    "session":{
        "type": "object",
        "properties": {
            "sessionKey": {
                "type": "string"
            },
            "operator": {
                "type": "string"
            },
            "timestamp": {
                "type": "string",
                "format": "date-time"
            },
            "description": {
                "type": "string"
            },
            "configuration": {
                "type": "object"
            },
            "modulesList": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "log": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "sessionKey",
            "operator",
            "timestamp",
            "description",
            "modulesList",
            "configuration",
            "log"
        ]
    },
    "testRun": {
        "type": "object",
        "properties": {
          "runDate": {
            "bsonType": "date",
            "description": "Date of the test run"
          },
          "test_runID": {
            "type": "string",
            "description": "Unique identifier for the test run"
          },
          "runSession": {
            "type": "string",
            "description": "Reference to the session in which the test run was performed"
          },
          "runSession_id": {
            "type": "string",
            "description": "Reference to the session in which the test run was performed"
          },
          "runStatus": {
            "type": "string",
            "description": "Status of the test run (e.g., 'failed', 'passed')"
          },
          "runType": {
            "type": "string",
            "description": "Type of the test run"
          },
          "runBoards": {
            "type": "object",
            "description": "Mapping of board numbers to names"
          },
          "tests": {
            "type": "object",
            "description": "Mapping of module IDs to test IDs"
          },
          "runFile": {
            "type": "string",
            "description": "Path to the file containing run data"
          },
          "runConfiguration": {
            "type": "object",
            "description": "Configuration settings for the test run"
          },
          "analysisList":
            {
                "type": "array",
                "description": "List of analysis results for the test run"
            },
          "referenceAnalysis":
            {
                "type": "string",
                "description": "Reference to the ref analysis for the test run"
            }
        },
        "required": ["runDate", "test_runID", "runSession", "runStatus", "runType", "runBoards", "tests", "runFile", "runConfiguration"]
      },  
    "moduleTest": {
        "type": "object",
        "properties": {
        "moduleTestKey": {
            "type": "string",
            "description": "Unique identifier for the module test"
          },
          "run": {
            "bsonType": "objectId",
            "description": "Reference to the test run"
          },
          "module": {
            "bsonType": "objectId",
            "description": "Reference to the module being tested"
          },
          "noise": {
            "type": "object",
            "description": "Noise data for the module test"
          },
          "board": {
            "type": "string",
            "description": "Name of the board used in the test"
          },
          "opticalGroupID": {
            "type": "integer",
            "description": "ID of the optical group"
          }
        },
        "required": ["moduleTestKey", "run", "module", "noise", "board", "opticalGroupID"]
      },
    "moduleTestAnalysis":{
        "type": "object",
        "properties": {
            // note: this will be passed by silvio
            "moduleTestAnalysisKey": {
                "type": "string",
                "description": "Unique identifier for the module test analysis"
            },
            "moduleTestKey": {
                "type": "string",
                "description": "Reference to the module test being analyzed"
            },
            "moduleTast_id": {
                "type": "string",
                "description": "Reference to the module test being analyzed"
            },
            "analysisVersion": {
                "type": "string",
                "description": "Version of the analysis code"
            },
            "analysisResults": {
                "type": "object",
                "description": "Results of the analysis"
            },
            "analysisSummary": {
                "type": "object",
                "description": "Summary of the analysis"
            },
            "analysisFile": {
                "type": "string",
                "description": "Path to the file containing analysis results"
            }
        },
        "required": ["moduleTestAnalysisKey", "moduleTestKey", "analysisVersion", "analysisResults", "analysisSummary", "analysisFile"]
    },
    "tests": {
        "type": "object",
        "properties": {
            "testID": {
                "type": "string"
            },
            "modules_list": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "testType": {
                "type": "string"
            },
            "testDate": {
                "type": "string"
            },
            "testOperator": {
                "type": "string"
            },
            "testStatus": {
                "type": "string"
            },
            "testResults": {
                "type": "object"
            },
            "testPayloadID": {
                "type": "string"
            }
        },
        "required": [
            "testID",
            "testType",
            "modules_list",
            "testDate",
            "testStatus",
            "testResults"
        ]
    },
    "ConnectionSnapshot": {
        "type": "object",
        "properties": {
            "First": {
                "type": "string"
            },
            "Last": {
                "type": "string"
            },
            "Chain": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "First",
            "Last",
            "Chain"
        ]
    }
}
